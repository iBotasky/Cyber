<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_800"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/hello_tv_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, Mundo"
        android:textColor="@color/grey_400"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/hello_tv_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:text="你好，世界"
        android:textColor="@color/grey_1000_w"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/hello_tv_france"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Bonjour, le monde"
        android:textColor="@color/grey_200"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/hello_tv_korea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="30dp"
        android:text="안녕하세요, 세계"
        android:textColor="@color/grey_200"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/hello_tv_jpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:text="こんにちは,世界"
        android:textColor="@color/grey_400"
        android:textSize="28sp" />


    <TextView
        android:id="@+id/hello_tv_germany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="11dp"
        android:text="Hallo,Welt"
        android:textColor="@color/grey_300"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/hello_tv_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Hello, World"
        android:textColor="@color/grey_050"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/hello_tv_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginTop="24dp"
        android:text="Hej, världen"
        android:textColor="@color/grey_050"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hello_tv_russuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="24dp"
        android:text="Saluton,mondo"
        android:textColor="@color/grey_050"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/hello_tv_en"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/splash_device" />


</RelativeLayout>